<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" 
    tools:context=".GameMenuActivity">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="false"
        android:contentDescription="@string/app_name"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
	    <Button
	        android:id="@+id/buttonStartGame"
	        android:layout_width="170dp"
	        android:layout_height="wrap_content"
	        android:text="@string/button_start_game" 
	        android:onClick="startGame"/>
	
	    <Button
	        android:id="@+id/buttonHighScore"
	        android:layout_width="170dp"
	        android:layout_height="wrap_content"
	        android:text="@string/button_high_score" 
	        android:onClick="showScores"/>
	    
	    <Button
	        android:id="@+id/buttonQuitGame"
	        android:layout_width="170dp"
	        android:layout_height="wrap_content"
	        android:text="@string/button_quit_game" 
	        android:onClick="quitGame"/>
    </LinearLayout>
</LinearLayout>