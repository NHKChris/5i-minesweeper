<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="esgi.project.winmine"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="esgi.project.winmine.GameMenuActivity"
            android:label="@string/app_name" >
           <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="esgi.project.winmine.ChooseLevelActivity" android:label="@string/header_level" />        
        <activity android:name="esgi.project.winmine.GameScoreActivity" android:label="@string/header_scores" />
        <activity android:name="esgi.project.winmine.GameActivity" android:label="@string/header_game" 
            android:theme="@style/NoTitle"/>
    </application>

</manifest>
